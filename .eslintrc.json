{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "quotes": ["error", "single"],
    "semi": "error",
    "arrow-spacing": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-console": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "ignorePatterns": ["/node_modules", "/out", "/.next"]
}
